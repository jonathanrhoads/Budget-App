@model IEnumerable<BudgetTracker.Models.Expenses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Budget Forms</h1>

<p>
    <a asp-action="Create" class="btn btn-primary m-2"><i class="fas fa-plus"></i> &nbsp; Add </a>
</p>

<div class="container">

    <div class="row">


        <div class="box-part text-center">
            <table class="table table-bordered table-light">
                <thead class="table-active">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.MonthlyIncome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IncomeVsTotal)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.MonthlyIncome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IncomeVsTotal)
                            </td>

                            <td>
                                <div class="btn-toolbar" role="toolbar">
                                    <div class="btn-group" role="rowgroup">
                                        <a asp-action="Edit" asp-route-id="@item.ExpenseId" class="btn btn-primary btn-sm mr-1"><i class="far fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.ExpenseId" class="btn btn-info btn-sm mr-1"><i class="fas fa-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.ExpenseId" class="btn btn-danger btn-sm "><i class="far fa-trash-alt"></i></a>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
